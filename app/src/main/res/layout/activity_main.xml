<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/pic" />

    <Button
        android:id="@+id/login_button_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="50dp"
        android:textSize="16sp"
        android:textColor="#FB8C00"
        android:background="@drawable/button_login"
        android:text="Login with email"
        android:textAllCaps="false"
        android:textStyle="bold" />

    <Button
        android:id="@+id/register_button_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/login_button_id"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="60dp"
        android:textSize="16sp"
        android:textColor="#ffff"
        android:backgroundTint="#FB8C00"
        android:background="@drawable/button_login"
        android:text="Create new account"
        android:textAllCaps="false"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/just_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="70dp"
        android:layout_alignBottom="@id/register_button_id"
        android:text="Instantly chat \nwith friends" />

</RelativeLayout>